{
    "name": "interactive-character-refsheet",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:analyze": "ANALYZE=true next build",
        "build:production": "NODE_ENV=production next build",
        "build:static": "NODE_ENV=production BUILD_STATIC=true next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:deployment": "npm run build:production && npm run test:performance",
        "test:performance": "vitest run --config vitest.performance.config.ts",
        "type-check": "tsc --noEmit",
        "validate": "npm run type-check && npm run lint && npm run test:run",
        "validate:production": "npm run type-check && npm run lint && npm run test:run && npm run build:production",
        "preview": "npm run build:static && npx serve out",
        "size-check": "npm run build:analyze && npx bundlesize",
        "deploy": "./scripts/deploy.sh",
        "deploy:analyze": "./scripts/deploy.sh --analyze",
        "deploy:vercel": "vercel --prod",
        "deploy:netlify": "netlify deploy --prod --dir=out",
        "postbuild": "echo 'Build completed successfully!'",
        "prebuild": "echo 'Starting build process...'"
    },
    "dependencies": {
        "autoprefixer": "^10.4.21",
        "next": "15.4.2",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "bundlesize": "^0.18.1",
        "eslint": "^8",
        "eslint-config-next": "15.4.2",
        "jsdom": "^26.1.0",
        "postcss": "^8",
        "tailwindcss": "^3.4.1",
        "typescript": "^5",
        "vitest": "^3.2.4",
        "webpack-bundle-analyzer": "^4.10.1"
    }
}
